<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	<!-- auto-config="true" : 스프링에서 제공하는 login폼으로 이동 설정
			 use-expressions="true" : Spring Expression Language(SpEL)을 사용할 수 있도록 설정 -->
	<security:http auto-config="true" use-expressions="true">
		<!-- <security:intercept-url pattern="/user/login" access="hasRole('ROLE_USER')"/> 
		<security:intercept-url pattern="/member/**" access="hasRole('ROLE_MEMBER')"/> -->
		<security:intercept-url pattern="/run/fire" access="hasRole('ROLE_ADMIN')"/><!-- acess(허용범위)의 값은 개발자의 임의 지정 -->
	</security:http>

	<!-- 각 페이지에 누가 접근할 수 있는지 설정 -->
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<!-- <security:user name="user" password="1234" authorities="ROLE_USER"/>
				<security:user name="dayoung" password="1234" authorities="ROLE_MEMBER"/> -->
				<security:user name="admin" password="1234" authorities="ROLE_ADMIN"/>
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>
	
</beans>
